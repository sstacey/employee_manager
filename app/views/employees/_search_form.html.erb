<%= form_with url: employees_path, method: :get do |f| %>
  <div class="row g-2 mb-4">
    <div class="col-md-3">
    <%= f.text_field :query, value: params[:query], placeholder: 'Search...', class: 'form-control' %>
    </div>
    <div class="col-md-1">
      <%= f.hidden_field :all, value: params[:all] %>
      <%= f.submit 'Search', name: nil, class: 'btn btn-primary' %>
    </div>
    <div class="col-md-3">
      <% if @show_all %>
        <%= link_to "Hide deactivated", employees_path(query: params[:query]), class: 'btn btn-outline-success' %>
      <% else %>
        <%= link_to "Show deactivated", employees_path(all: "true", query: params[:query]), class: 'btn btn-outline-danger' %>
      <% end %>
    </div>
  </div>
<% end %>
