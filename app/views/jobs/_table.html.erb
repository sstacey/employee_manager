<div class="table">
  <table class="table table-hover">
    <thead class="table-secondary">
      <tr>
        <th scope="col"><%= sort_link(column: 'code', label: 'Code', table: 'jobs') %></th>
        <th scope="col"><%= sort_link(column: 'name', label: 'Name', table: 'jobs') %></th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <th scope="row"><%= job.code %></th>
        <td><%= link_to job.name, edit_job_path(job) %></td>
        <td>
          <%= link_to 'Delete', job_path(job),
                  method: :delete,
                  data: { confrim: 'Are you sure?' } %> 
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
