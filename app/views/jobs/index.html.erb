<h1>Jobs</h1>
<%= link_to 'New Job', new_job_path %>
<ul>
  <% @jobs.each do |job| %>
    <li>
      <%= link_to job.name, job %> | 
      <%= link_to 'Edit', edit_job_path(job) %> |
      <%= link_to 'Delete', job_path(job),
                  method: :delete,
                  data: { confrim: 'Are you sure?' } %> 
    </li>
  <% end %>
</ul>
